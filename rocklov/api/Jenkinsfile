pipeline {
    agent {
        docker {
            image 'ruby'
            args '-- network rocklov-network'
        }
    }

    stages {
        stage('Prep') {
            steps {
                sh 'cd rocklov/api && bundle install'
            }
        }

        stage('Testing') {
            steps {
                sh 'cd rocklov/api && rspec'
            }
        }
    }
}